<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Gradien biru lembut -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#B3E5FC"
            android:centerColor="#E1F5FE"
            android:endColor="#FFFFFF"
            android:angle="90"/>
        </shape>
    </item>

    <!-- Overlay transparan tipis untuk memberi efek cahaya -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#33FFFFFF"/> <!-- transparansi 20% -->
        </shape>
    </item>

</layer-list>
