<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu.permintaan_surat">

    <!-- =============== KONTEN UTAMA =============== -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_sikunir2">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            app:contentInsetStartWithNavigation="0dp">

            <ImageButton
                android:id="@+id/btnkembali"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:src="@drawable/back_2"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Tombol Kembali"
                android:scaleType="centerInside"
                android:padding="12dp"
                android:layout_gravity="start"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pengajuan Surat"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="64dp"
                android:layout_gravity="start"/>

        </androidx.appcompat.widget.Toolbar>

        <!-- Konten Scrollable -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Surat Domisili -->
                <LinearLayout
                    android:id="@+id/item_surat_domisili"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_card_surat"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/icon_surat_domisili"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/domisili"
                        android:layout_marginEnd="16dp" />

                    <TextView
                        android:id="@+id/text_surat_domisili"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Surat Domisili"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/arrow_surat_domisili"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_right" />
                </LinearLayout>

                <!-- SKTM -->
                <LinearLayout
                    android:id="@+id/item_surat_sktm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_card_surat"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/icon_surat_sktm"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/sktm"
                        android:layout_marginEnd="16dp" />

                    <TextView
                        android:id="@+id/text_surat_sktm"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="SKTM"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/arrow_surat_sktm"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_right" />
                </LinearLayout>

                <!-- Surat Kehilangan -->
                <LinearLayout
                    android:id="@+id/item_surat_kehilangan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_card_surat"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/icon_surat_kehilangan"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/icon_kehilangan"
                        android:layout_marginEnd="16dp" />

                    <TextView
                        android:id="@+id/text_surat_kehilangan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Surat Kehilangan"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/arrow_surat_kehilangan"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_right" />
                </LinearLayout>

                <!-- Surat Beda Nama -->
                <LinearLayout
                    android:id="@+id/item_surat_bedanama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_card_surat"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/icon_surat_bedanama"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/icon_beda_nama"
                        android:layout_marginEnd="16dp" />

                    <TextView
                        android:id="@+id/text_surat_bedanama"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Surat Beda Nama"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/arrow_surat_bedanama"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_right" />
                </LinearLayout>

                <!-- Surat Usaha -->
                <LinearLayout
                    android:id="@+id/item_surat_usaha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_card_surat"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/icon_surat_usaha"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/icon_usaha"
                        android:layout_marginEnd="16dp" />

                    <TextView
                        android:id="@+id/text_surat_usaha"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Surat Usaha"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/arrow_surat_usaha"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_right" />
                </LinearLayout>

                <!-- Surat Kematian -->
                <LinearLayout
                    android:id="@+id/item_surat_kematian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_card_surat"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/icon_surat_kematian"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/icon_kematian"
                        android:layout_marginEnd="16dp" />

                    <TextView
                        android:id="@+id/text_surat_kematian"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Surat Kematian"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/arrow_surat_kematian"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_right" />
                </LinearLayout>


                <!-- Surat Kematian -->

                <!-- Aspirasi -->
                <LinearLayout
                    android:id="@+id/item_skbb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_card_surat"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/icon_skbb"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/icon_kelakuanbaik" />

                    <TextView
                        android:id="@+id/text_skbb"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Surat Keterangan Berkelakuan Baik"
                        android:textSize="16sp"
                        android:textStyle="bold" />   

                    <ImageView
                        android:id="@+id/arrow_skbb"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_right" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/item_aspirasi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_card_surat"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/icon_aspirasi"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/icon_message"
                        android:layout_marginEnd="16dp" />

                    <TextView
                        android:id="@+id/text_aspirasi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Aspirasi/Saran Desa"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/arrow_aspirasi"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_right" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- =============== NAVIGATION DRAWER =============== -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/nav_menu"
        app:headerLayout="@layout/nav_header" />

</androidx.drawerlayout.widget.DrawerLayout>
