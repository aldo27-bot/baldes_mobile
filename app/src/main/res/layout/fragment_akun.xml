<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_sikunir2"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Judul Profil -->
        <TextView
            android:id="@+id/kode_surat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profil"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="30dp"/>

        <!-- Foto Profil -->
        <ImageView
            android:id="@+id/foto_profil"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/akun_profil"
            android:scaleType="centerCrop"
            android:layout_marginBottom="30dp"
            android:padding="4dp"
            android:clipToOutline="true"/>

        <!-- Form Profil -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Email -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Email">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/masukan_email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="textEmailAddress"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:longClickable="false"
                    android:editable="false"
                    android:textSize="14sp"
                    android:backgroundTint="@color/white"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Username -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Username">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/masukan_username"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:longClickable="false"
                    android:editable="false"
                    android:textSize="14sp"
                    android:backgroundTint="@color/white"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Nama -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Nama">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/masukan_nama"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:longClickable="false"
                    android:editable="false"
                    android:textSize="14sp"
                    android:backgroundTint="@color/white"/>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Tombol Edit & Logout -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buka"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_marginEnd="20dp"
                android:text="Edit"
                android:textColor="@color/white"
                app:cornerRadius="12dp"
                android:backgroundTint="@color/biru_dingin"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/logout"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:text="Keluar"
                android:textColor="@color/white"
                app:cornerRadius="12dp"
                android:backgroundTint="#A10000"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
