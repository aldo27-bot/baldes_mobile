<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".Surat.Beda_Nama">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/desc_back_button"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:padding="8dp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/black" /> <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_beda_nama"
        android:textColor="@color/color_title_text" android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btnBack"
        app:layout_constraintStart_toEndOf="@+id/btnBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnBack"
        app:layout_constraintHorizontal_bias="0"  android:layout_marginStart="8dp" /> <LinearLayout
        android:id="@+id/inputContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_nama_lengkap"
            android:textSize="14sp"
            android:textColor="@color/color_label_text" android:labelFor="@id/etNamaLengkap" />
        <EditText
            android:id="@+id/etNamaLengkap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_rounded_bg"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:textSize="16sp"
            android:singleLine="true"
            android:hint=""
            android:minHeight="48dp"
            android:autofillHints="personName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/label_nik"
            android:textSize="14sp"
            android:textColor="@color/color_label_text" android:labelFor="@id/etNIK" />
        <EditText
            android:id="@+id/etNIK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_rounded_bg"
            android:inputType="number"
            android:padding="12dp"
            android:textSize="16sp"
            android:singleLine="true"
            android:hint=""
            android:minHeight="48dp"
            android:autofillHints="none" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/label_ttl"
            android:textSize="14sp"
            android:textColor="@color/color_label_text" android:labelFor="@id/etTTL" />
        <EditText
            android:id="@+id/etTTL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_rounded_bg"
            android:inputType="text"
            android:padding="12dp"
            android:textSize="16sp"
            android:singleLine="true"
            android:hint=""
            android:minHeight="48dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/label_pekerjaan"
            android:textSize="14sp"
            android:textColor="@color/color_label_text" android:labelFor="@id/etPekerjaan" />
        <EditText
            android:id="@+id/etPekerjaan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_rounded_bg"
            android:inputType="text"
            android:padding="12dp"
            android:textSize="16sp"
            android:singleLine="true"
            android:hint=""
            android:minHeight="48dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/label_alamat"
            android:textSize="14sp"
            android:textColor="@color/color_label_text" android:labelFor="@id/etAlamat" />
        <EditText
            android:id="@+id/etAlamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_rounded_bg"
            android:inputType="textPostalAddress"
            android:padding="12dp"
            android:textSize="16sp"
            android:singleLine="true"
            android:hint=""
            android:minHeight="48dp"
            android:autofillHints="postalAddress" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/label_keterangan"
            android:textSize="14sp"
            android:textColor="@color/color_label_text" android:labelFor="@id/etKeterangan" />
        <EditText
            android:id="@+id/etKeterangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_rounded_bg"
            android:gravity="top"
            android:minLines="5"
            android:inputType="textMultiLine"
            android:padding="12dp"
            android:textSize="16sp"
            android:hint=""
            android:minHeight="48dp" />

    </LinearLayout>

        <Button
            android:id="@+id/btnKirim"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/button_kirim"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:background="@drawable/btn_gradient_bedanama"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            app:layout_constraintTop_toBottomOf="@id/inputContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>