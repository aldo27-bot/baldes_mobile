<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".Surat.SKTM">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp">

        <!-- Tombol Kembali -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/transparent"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:padding="8dp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/black"
            android:contentDescription="@string/desc_back_button"/>

        <!-- Judul Form -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Surat Keterangan Tidak Mampu"
            android:textColor="@color/color_title_text"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/btnBack"
            app:layout_constraintStart_toEndOf="@+id/btnBack"
            app:layout_constraintTop_toTopOf="@+id/btnBack" />

        <!-- Container Input -->
        <LinearLayout
            android:id="@+id/inputContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="32dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/tvTitle">

            <!-- DATA ANAK -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Anak"
                android:textSize="14sp"
                android:textColor="@color/color_label_text" />
            <EditText
                android:id="@+id/etNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_rounded_bedanama"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:textSize="16sp"
                android:hint="Nama lengkap anak"
                android:minHeight="48dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Tempat/Tanggal Lahir Anak"
                android:textSize="14sp"
                android:textColor="@color/color_label_text" />
            <EditText
                android:id="@+id/etTTL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_rounded_bedanama"
                android:inputType="text"
                android:padding="12dp"
                android:textSize="16sp"
                android:hint="Contoh: Jakarta, 17-08-2010"
                android:minHeight="48dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Asal Sekolah"
                android:textSize="14sp"
                android:textColor="@color/color_label_text" />
            <EditText
                android:id="@+id/etAsalSekolah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_rounded_bedanama"
                android:inputType="text"
                android:padding="12dp"
                android:textSize="16sp"
                android:hint="Nama sekolah anak"
                android:minHeight="48dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Keperluan"
                android:textSize="14sp"
                android:textColor="@color/color_label_text" />
            <EditText
                android:id="@+id/etKeperluan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_rounded_bedanama"
                android:inputType="textMultiLine"
                android:minLines="2"
                android:gravity="top"
                android:padding="12dp"
                android:textSize="16sp"
                android:hint="Keperluan SKTM"
                android:minHeight="48dp" />

            <!-- DATA ORANG TUA -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Nama Orang Tua"
                android:textSize="14sp"
                android:textColor="@color/color_label_text" />
            <EditText
                android:id="@+id/etNamaOrtu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_rounded_bedanama"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:textSize="16sp"
                android:hint="Nama lengkap orang tua"
                android:minHeight="48dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="NIK Orang Tua"
                android:textSize="14sp"
                android:textColor="@color/color_label_text" />
            <EditText
                android:id="@+id/etNIKOrtu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_rounded_bedanama"
                android:inputType="number"
                android:maxLength="16"
                android:padding="12dp"
                android:textSize="16sp"
                android:hint="Nomor Induk Kependudukan"
                android:minHeight="48dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Alamat Orang Tua"
                android:textSize="14sp"
                android:textColor="@color/color_label_text" />
            <EditText
                android:id="@+id/etAlamatOrtu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_rounded_bedanama"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:gravity="top"
                android:padding="12dp"
                android:textSize="16sp"
                android:hint="Alamat lengkap (RT/RW)"
                android:minHeight="48dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Tempat/Tanggal Lahir Orang Tua"
                android:textSize="14sp"
                android:textColor="@color/color_label_text" />
            <EditText
                android:id="@+id/etTTLOrtu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_rounded_bedanama"
                android:inputType="text"
                android:padding="12dp"
                android:textSize="16sp"
                android:hint="Contoh: Jakarta, 17-08-1970"
                android:minHeight="48dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Pekerjaan Orang Tua"
                android:textSize="14sp"
                android:textColor="@color/color_label_text" />
            <EditText
                android:id="@+id/etPekerjaanOrtu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_rounded_bedanama"
                android:inputType="text"
                android:padding="12dp"
                android:textSize="16sp"
                android:hint="Pekerjaan saat ini"
                android:minHeight="48dp" />

            <!-- FILE UPLOAD -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Upload File"
                android:textSize="14sp"
                android:textColor="@color/color_label_text" />

            <LinearLayout
                android:id="@+id/filePickerContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rounded_bedanama"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/btnPilihFile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="25dp"
                    android:paddingVertical="12dp"
                    android:text="Pilih File"
                    android:textStyle="normal"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:background="@drawable/btn_upload_file_bedanama"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:minHeight="48dp" />

                <TextView
                    android:id="@+id/tvNamaFile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="12dp"
                    android:text="Tidak ada file yang dipilih"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:singleLine="true"
                    android:ellipsize="start"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Tombol Kirim -->
        <Button
            android:id="@+id/btnKirim"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Kirim"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:background="@drawable/btn_gradient_bedanama"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/inputContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
