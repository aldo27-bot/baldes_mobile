<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">



        <!-- Tombol Back -->
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/allow_back"
            app:tint="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Judul -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Surat Berkelakuan Baik"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/ivBack"
            app:layout_constraintTop_toTopOf="@id/ivBack"
            app:layout_constraintBottom_toBottomOf="@id/ivBack" />

        <!-- Nama Lengkap -->
        <TextView
            android:id="@+id/tvNamaLengkapLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Lengkap"
            android:textSize="12sp"
            android:textColor="#9A9A9A"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/ivBack"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etNamaLengkap"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_edittext"
            android:paddingHorizontal="12dp"
            android:textSize="14sp"
            android:hint="Konoo"
            app:layout_constraintTop_toBottomOf="@id/tvNamaLengkapLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Jenis Kelamin -->
        <TextView
            android:id="@+id/tvJenisKelaminLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Kelamin"
            android:textSize="12sp"
            android:textColor="#9A9A9A"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/etNamaLengkap"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etJenisKelamin"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_edittext"
            android:paddingHorizontal="12dp"
            android:textSize="14sp"
            android:hint="Laki-laki"
            app:layout_constraintTop_toBottomOf="@id/tvJenisKelaminLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- TTL -->
        <TextView
            android:id="@+id/tvTtlLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TTL"
            android:textSize="12sp"
            android:textColor="#9A9A9A"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/etJenisKelamin"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etTtl"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_edittext"
            android:paddingHorizontal="12dp"
            android:textSize="14sp"
            android:hint="Busan, 14 Februari 2009"
            app:layout_constraintTop_toBottomOf="@id/tvTtlLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Agama -->
        <TextView
            android:id="@+id/tvAgamaLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agama"
            android:textSize="12sp"
            android:textColor="#9A9A9A"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/etTtl"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etAgama"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_edittext"
            android:paddingHorizontal="12dp"
            android:textSize="14sp"
            android:hint="Khatolic"
            app:layout_constraintTop_toBottomOf="@id/tvAgamaLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Alamat -->
        <TextView
            android:id="@+id/tvAlamatLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat"
            android:textSize="12sp"
            android:textColor="#9A9A9A"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/etAgama"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etAlamat"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_edittext"
            android:paddingHorizontal="12dp"
            android:textSize="14sp"
            android:hint="Jl. Sean No.03-10"
            app:layout_constraintTop_toBottomOf="@id/tvAlamatLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Keterangan -->
        <TextView
            android:id="@+id/tvKeteranganLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keterangan"
            android:textSize="12sp"
            android:textColor="#9A9A9A"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/etAlamat"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etKeterangan"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:background="@drawable/bg_edittext_multiline"
            android:gravity="top|start"
            android:padding="12dp"
            android:textSize="14sp"
            android:inputType="textMultiLine"
            android:hint="Permohonan pembuatan Surat Keterangan Berkelakuan Baik atas nama Konoo, penduduk Desa Kuncir, Kecamatan Ngetos, yang berperilaku baik dan tidak pernah terlibat perkara hukum. Surat ini diperlukan sebagai persyaratan melamar pekerjaan."
            app:layout_constraintTop_toBottomOf="@id/tvKeteranganLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Tombol Kirim (gradient pill) -->
        <Button
            android:id="@+id/btnKirim"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:text="Kirim"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@android:color/white"

            android:background="@drawable/bg_button_gradient"
            android:backgroundTint="@null"
            app:backgroundTint="@null"

            app:layout_constraintTop_toBottomOf="@id/etKeterangan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
