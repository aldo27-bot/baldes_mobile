<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_detail_foto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/kunir"
            android:layout_marginBottom="12dp"/>

        <TextView android:id="@+id/tv_detail_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Pengajuan"
            android:textSize="18sp"
            android:padding="4dp"/>

        <TextView android:id="@+id/tv_detail_judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Judul Aspirasi"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="4dp"/>

        <TextView android:id="@+id/tv_detail_isi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Isi Aspirasi"
            android:textSize="16sp"
            android:padding="4dp"/>

        <TextView android:id="@+id/tv_detail_tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal"
            android:textSize="15sp"
            android:padding="4dp"/>

        <TextView android:id="@+id/tv_detail_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textStyle="bold"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="17sp"
            android:padding="4dp"/>

        <TextView android:id="@+id/tv_detail_alasan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alasan"
            android:textColor="@android:color/holo_red_dark"
            android:visibility="gone"
            android:padding="4dp"/>

    </LinearLayout>
</ScrollView>
