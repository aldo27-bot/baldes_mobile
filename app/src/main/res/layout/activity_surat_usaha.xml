<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/transparent"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:padding="8dp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/black"
            android:contentDescription="Tombol Kembali"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Surat Usaha"
            android:textColor="@color/color_title_text"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/btnBack"
            app:layout_constraintStart_toEndOf="@+id/btnBack"
            app:layout_constraintTop_toTopOf="@+id/btnBack"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/inputContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="32dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/tvTitle">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data Pemohon"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Lengkap"
                android:textSize="14sp"
                android:textColor="@color/color_label_text" />

            <EditText
                android:id="@+id/etNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_rounded_bedanama"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:textSize="16sp"
                android:hint="Nama Lengkap"
                android:minHeight="48dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Tempat, Tanggal Lahir"
                android:textSize="14sp"
                android:textColor="@color/color_label_text" />

            <EditText
                android:id="@+id/etTTL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_rounded_bedanama"
                android:inputType="text"
                android:padding="12dp"
                android:textSize="16sp"
                android:hint="Contoh: Jakarta, 01-01-1990"
                android:minHeight="48dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Alamat Lengkap"
                android:textColor="@color/color_label_text"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etAlamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_rounded_bedanama"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:gravity="top"
                android:padding="12dp"
                android:textSize="16sp"
                android:hint="Alamat lengkap (Jalan, RT/RW)"
                android:minHeight="48dp" />

            <!-- Kapan Usaha -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text=" Sejak Kapan Usaha"
                android:textColor="#555555"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etKapanUsaha"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_rounded_bedanama"
                android:padding="12dp"
                android:textSize="16sp"
                android:hint="Contoh: 20 Januari 2025"
                android:inputType="text" />

            <!-- Lokasi Usaha -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Lokasi Usaha"
                android:textColor="#555555"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etLokasiUsaha"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_rounded_bedanama"
                android:padding="12dp"
                android:textSize="16sp"
                android:hint="Contoh: Desa Kuncir"
                android:inputType="text" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Keterangan Usaha"
                android:textColor="#555555"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etKeterangan"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_rounded_bedanama"
                android:gravity="top"
                android:hint="Masukkan Keterangan Usaha Secara Detail"
                android:inputType="textMultiLine"
                android:minLines="5"
                android:padding="12dp"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dokumen Pendukung"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilih File Pendukung (KTP/KK/Surat Pengantar RT)"
                android:textSize="14sp"
                android:textColor="@color/color_label_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rounded_bedanama"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/btnPilihFile"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:paddingHorizontal="25dp"
                    android:text="Pilih File"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:background="@drawable/btn_upload_file_bedanama"
                    android:backgroundTint="@null"
                    app:backgroundTint="@null"
                    android:foregroundTint="@null"
                    android:clickable="true"
                    android:focusable="true"/>


                <TextView
                    android:id="@+id/tvNamaFile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="12dp"
                    android:text="Belum ada file dipilih (Opsional)"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:singleLine="true"
                    android:ellipsize="start"/>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnKirim"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Kirim Pengajuan"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:background="@drawable/btn_gradient_bedanama"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/inputContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>