<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".Surat.SKM">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/transparent"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:padding="8dp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/black"
            android:contentDescription="Tombol Kembali"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Surat Kematian"
            android:textColor="@color/color_title_text"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/btnBack"
            app:layout_constraintStart_toEndOf="@+id/btnBack"
            app:layout_constraintTop_toTopOf="@+id/btnBack" />

        <LinearLayout
            android:id="@+id/inputContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="32dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/tvTitle">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data Almarhum/Almarhumah"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Lengkap"
                android:textSize="14sp"
                android:textColor="@color/color_label_text" />

            <EditText
                android:id="@+id/etNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_rounded_bedanama"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:textSize="16sp"
                android:hint="Nama lengkap almarhum"
                android:minHeight="48dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Tempat, Tanggal Lahir"
                android:textSize="14sp"
                android:textColor="@color/color_label_text" />

            <EditText
                android:id="@+id/etTTL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_rounded_bedanama"
                android:inputType="text"
                android:padding="12dp"
                android:textSize="16sp"
                android:hint="Contoh: Jakarta, 01-01-1970"
                android:minHeight="48dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Jenis Kelamin"
                android:textSize="14sp"
                android:textColor="@color/color_label_text" />

            <EditText
                android:id="@+id/etJenisKelamin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_rounded_bedanama"
                android:inputType="textCapSentences"
                android:padding="12dp"
                android:textSize="16sp"
                android:hint="Pria / Wanita"
                android:minHeight="48dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/label_pekerjaan"
                android:textSize="14sp"
                android:textColor="@color/color_label_text" />

            <EditText
                android:id="@+id/etPekerjaan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_rounded_bedanama"
                android:inputType="text"
                android:padding="12dp"
                android:textSize="16sp"
                android:hint="Pekerjaan saat ini"
                android:minHeight="48dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Agama"
                android:textSize="14sp"
                android:textColor="@color/color_label_text" />

            <EditText
                android:id="@+id/etAgama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_rounded_bedanama"
                android:inputType="textCapSentences"
                android:padding="12dp"
                android:textSize="16sp"
                android:hint="Contoh: Islam"
                android:minHeight="48dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Kewarganegaraan"
                android:textColor="@color/color_label_text"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etkewarganegaraan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_rounded_bedanama"
                android:inputType="textCapSentences"
                android:padding="12dp"
                android:textSize="16sp"
                android:hint="Contoh: Indonesia (WNI)"
                android:minHeight="48dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Alamat Almarhum"
                android:textColor="@color/color_label_text"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etAlamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_rounded_bedanama"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:gravity="top"
                android:padding="12dp"
                android:textSize="16sp"
                android:hint="Alamat lengkap (Jalan, RT/RW)"
                android:minHeight="48dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keterangan Kematian (Waktu dan Lokasi)"
                android:textColor="@color/color_label_text"
                android:textSize="14sp"
                android:layout_marginTop="24dp" />

            <EditText
                android:id="@+id/etKeterangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_rounded_bedanama"
                android:padding="12dp"
                android:textColor="@android:color/black"
                android:minLines="3"
                android:gravity="top|start"
                android:inputType="textMultiLine"
                android:hint="Contoh: Meninggal pada hari Senin, 18 November 2025 di RSUD X, karena sakit jantung." />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dokumen Pendukung"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/t_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilih Dokumen (Contoh: Surat Pengantar RT/RW, KTP)"
                android:textSize="14sp"
                android:textColor="@color/color_label_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rounded_bedanama"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/btn_choose_file"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:paddingHorizontal="25dp"
                    android:text="Pilih File"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:background="@drawable/btn_upload_file_bedanama"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="chooseFile"/>

                <TextView
                    android:id="@+id/t_file_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="12dp"
                    android:text="Tidak ada file yang dipilih"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:singleLine="true"
                    android:ellipsize="start"/>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnKirim"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Kirim Pengajuan"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:background="@drawable/btn_gradient_bedanama"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/inputContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>